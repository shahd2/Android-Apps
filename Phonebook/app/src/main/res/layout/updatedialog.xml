<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ImageView
        android:id="@+id/circleImageView2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_alignTop="@+id/editTextUPdateFname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editTextUPdateNum" />
    <EditText
        android:id="@+id/editTextUPdateFname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/circleImageView2"
        android:layout_toEndOf="@+id/circleImageView2" />
    <EditText
        android:id="@+id/editTextUPdateNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Number"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editTextUPdateFname"
        android:layout_toEndOf="@+id/circleImageView2"
        android:layout_toRightOf="@+id/circleImageView2" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:layout_alignTop="@+id/circleImageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="UPDATE"
            />
        <Button
            android:id="@+id/UPdatecancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="cancel"
            />
    </TableRow>
</RelativeLayout>