<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.moviebooking.seats">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Screen This Side"
        android:textAppearance="?android:textAppearanceLarge"
        android:textAlignment="center"
        />
<GridLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_row="0"
        android:layout_column="0" />
    <ImageView
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_alignTop="@+id/gridView"
        android:layout_toRightOf="@+id/a1"
        android:layout_toEndOf="@+id/a1"
        android:layout_row="0"
        android:layout_column="1" />
    <ImageView
        android:id="@+id/a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_alignTop="@+id/gridView"
        android:layout_toRightOf="@+id/a2"
        android:layout_toEndOf="@+id/a2"
        android:layout_row="0"
        android:layout_column="2" />
    <ImageView
        android:id="@+id/a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_alignTop="@+id/gridView"
        android:layout_toRightOf="@+id/a3"
        android:layout_toEndOf="@+id/a3"
        android:layout_row="0"
        android:layout_column="3" />
    <ImageView
        android:id="@+id/a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_alignTop="@+id/gridView"
        android:layout_toRightOf="@+id/a4"
        android:layout_toEndOf="@+id/a4"
        android:layout_row="0"
        android:layout_column="4" />
    <ImageView
        android:id="@+id/a6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_alignTop="@+id/gridView"
        android:layout_toRightOf="@+id/a5"
        android:layout_toEndOf="@+id/a5"
        android:layout_row="0"
        android:layout_column="5" />
    <ImageView
        android:id="@+id/a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_alignTop="@+id/gridView"
        android:layout_toRightOf="@+id/a6"
        android:layout_toEndOf="@+id/a6"
        android:layout_row="0"
        android:layout_column="6" />

    <TextView
        android:id="@+id/a"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="  A"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_row="0"
        android:layout_column="7"
        android:layout_rowSpan="2" />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_row="2"
        android:layout_column="0" />
    <ImageView
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_row="2"
        android:layout_column="1" />
    <ImageView
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair"
        android:layout_row="2"
        android:layout_column="2" />
</GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book"
        android:id="@+id/book"
        android:layout_gravity="center_horizontal" />

</LinearLayout>